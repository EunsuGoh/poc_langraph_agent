{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Router CLI (pretty)",
      "type": "python",
      "request": "launch",
      "module": "poc_langraph_agent.cli",
      "args": [
        "--pretty"
      ],
      "env": {
        "PYTHONPATH": "src",
        "GOOGLE_API_KEY": "${env:GOOGLE_API_KEY}",
        "GEMINI_MODEL": "${env:GEMINI_MODEL|gemini-2.5-flash}"
      },
      "purpose": ["debug-in-terminal"],
      "console": "integratedTerminal"
    },
    {
      "name": "Sample Script",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/run_graph.py",
      "env": {
        "PYTHONPATH": "src",
        "GOOGLE_API_KEY": "${env:GOOGLE_API_KEY}",
        "GEMINI_MODEL": "${env:GEMINI_MODEL|gemini-2.5-flash}"
      },
      "purpose": ["debug-in-terminal"],
      "console": "integratedTerminal"
    }
  ]
}
